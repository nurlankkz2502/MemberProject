<UserControl x:Class="WPF_Study.DayOfWeek"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Study"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="15*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox  Grid.Row="0" IsReadOnly="True" FontSize="14"  x:Name="txtBoxDay" HorizontalContentAlignment="Left" Padding="5" VerticalContentAlignment="Center"  Background="#FF5CC75C"  ></TextBox>
        <TextBox IsReadOnly="True" BorderBrush="DarkGray"  Grid.Row="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Padding="5" FontSize="16" x:Name="txtBoxDate" ></TextBox>
        <StackPanel Background="white" x:Name="DayPanel" Grid.Row=" 2"></StackPanel>
        
    </Grid>
</UserControl>
